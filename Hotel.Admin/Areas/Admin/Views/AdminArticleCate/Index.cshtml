@model IEnumerable<Hotel.Admin.Areas.Admin.DTOs.ArticleCate.IndexArticleCateDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>Danh sách danh mục</h1>

<button class="my-3 btn btn-success text-decoration-none">
    <a asp-action="Create" class="text-white">Thêm danh mục</a>
</button>
<table class="table table-hover table-bordered text-center">
    <thead>
        <tr>

            <th>
                Mã danh mục
            </th>
            <th>
                Tên danh mục
            </th>
            <th>
                Tùy chỉnh
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) 
                @Html.ActionLink("Xóa", "Delete", new {id=item.Id})
            </td>
        </tr>
}
    </tbody>
</table>
